{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "lib",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
